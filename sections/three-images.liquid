<section>
  <div class="three-images-wrapper">
    {% if section.settings.image1 != blank %}
      <div class="one-user">
        <h3></h3>
      </div>
    {% else %}
      <div class="one"></div>
      <h3></h3>
    {% endif %}

    {% if section.settings.image2 != blank %}
      <div class="two-user">
        <h3></h3>
      </div>
