<header class="header-nav">
  <div>
    <a href="/">
      <img
        height="50"
        width="50"
        loading="lazy"
        src="{{ 'FavIcone.png' | asset_url }}"
        alt="Site logo"
      >
    </a>
  </div>
  <div>
    <ul class="middle-nav-links">
      {% for link in linklists['main-menu-1'].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="right-nav-items">
    <form action="/search">
      <input class="search-nav" placeholder="search" type="search">
    </form>
    <a href="/">
      <img
        height="40"
        width="40"
        loading="lazy"
        src="{{ 'FavIcone.png' | asset_url }}"
        alt="Site logo"
      >
    </a>
  </div>
</header>

<style>
  .header-nav {
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 10px;
    background-color: aliceblue;
  }

  .middle-nav-links {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
  }

  .middle-nav-links li {
    margin: 4px;
    list-style-type: none;
  }

  .middle-nav-links li:hover {
    text-decoration: underline;
  }

  .middle-nav-links a {
    color: inherit;
    text-decoration: none;
  }

  .right-nav-items {
    display: flex;
    align-items: center;
  }

  .search-nav {
    padding: 10px;
    border-radius: var(--border-radius);
    background-color: var(se);
  }
</style>
